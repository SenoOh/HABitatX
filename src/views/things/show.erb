<div>
  <p>Things名 : <%= @title_things %></p>
  <p>Excel : <%= @excel_things %></p>
  <p>Template : <%= @things_erb %></p>
</div>
<div class="d-flex mb-4">
  <form action="/things/<%= params[:id] %>/edit" method="get">
    <input type="submit" value="編集" class="btn btn-primary me-2">
  </form>
  <form action="/things/<%= params[:id] %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="削除" class="btn btn-primary">
  </form>
</div>
<div>
  <a class="btn btn-secondary" href="/things">Things一覧に戻る</a>
</div>