<form action="/template" method="post">
  <div class="mb-3">
    <label for="title_template" class="form-label">タイトル</label>
    <input type="text" id="title_template" name="title_template" class="form-control">
  </div>
  <div class="mb-3">
    <label for="content" class="form-label">コード</label>
    <textarea id="content" name="content" class="form-control"></textarea>
  </div>
  <div class="mb-3">
    <label for="basename" class="form-label">openHAB 設定ファイル名</label>
    <input type="text" id="basename" name="basename" class="form-control">
  </div>
  <div class="mb-3">
    <label for="file_type" class="form-label">拡張子</label>
    <select id="file_type" name="file_type">
      <option value="items">items</option>
      <option value="things">things</option>
    </select>
  </div>
  <div>
    <input type="submit" value="保存" class="btn btn-primary">
  </div>
</form>
<div>
  <a class="btn btn-secondary" href="/code">Template一覧に戻る</a>
</div>