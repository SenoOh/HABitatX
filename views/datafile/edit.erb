<form action="/template/<%= params[:id] %>" method="post">
  <div class="mb-3">
    <label for="excel" class="form-label">Excel</label>
    <input type="file" id="excel" name="excel" accept=".xls,.xlsx" class="form-control">
  </div>
  <div class="mb-3">
    <label for="codes_title" class="form-label">Code</label>
    <select id="codes_title" name="codes_title" class="form-control">
      <option value="">Code</option>
      <% @codes.each do |codes| %>
        <option value="<%= codes["title_code"] %>"><%= codes["title_code"] %></option>
      <% end %>
    </select>
  </div>
  <div>
    <input type="hidden" name="_method" value="patch">
    <input type="submit" value="保存" class="btn btn-primary">
  </div>
</form>
<div>
  <a class="btn btn-secondary" href="/template/<%= params[:id] %>">戻る</a>
</div>